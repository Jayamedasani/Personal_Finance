<?xml version="1.0"  encoding="UTF-8" ?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
    <display-name>User Management web application</display-name>
    <servlet>
        <servlet-name>IncomeServlet</servlet-name>
        <servlet-class>org.wavemaker.servlet.IncomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IncomeServlet</servlet-name>
        <url-pattern>/incomes/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ExpenditureServlet</servlet-name>
        <servlet-class>org.wavemaker.servlet.ExpenditureServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExpenditureServlet</servlet-name>
        <url-pattern>/expenditures/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IncomeCategoryServlet</servlet-name>
        <servlet-class>org.wavemaker.servlet.IncomeCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IncomeCategoryServlet</servlet-name>
        <url-pattern>/incomecategories/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ExpenditureCategoryServlet</servlet-name>
        <servlet-class>org.wavemaker.servlet.ExpenditureCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExpenditureCategoryServlet</servlet-name>
        <url-pattern>/expenditurecategories/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SavingsServlet</servlet-name>
        <servlet-class>org.wavemaker.servlet.SavingsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SavingsServlet</servlet-name>
        <url-pattern>/savings/*</url-pattern>
    </servlet-mapping>
</web-app>